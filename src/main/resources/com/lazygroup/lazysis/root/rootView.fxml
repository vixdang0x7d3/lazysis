<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="results" minHeight="800.0" minWidth="1200.0" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lazygroup.lazysis.root.RootViewFxmlController">
   <top>
      <VBox BorderPane.alignment="TOP_CENTER">
         <children>
            <HBox spacing="10.0" VBox.vgrow="NEVER">
               <children>
                  <Label fx:id="helloLabel" text="hello logged-in user:" />
                  <Label fx:id="userNameLabel" text="username holder" />
               </children>
            </HBox>
            <ToolBar>
              <items>
                <Button fx:id="logoutButton" mnemonicParsing="false" text="logout" />
                  <ComboBox fx:id="siteRoutingComboBox" prefWidth="150.0" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <bottom>
      <VBox BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="homeTab" text="Trang chủ">
          </Tab>
          <Tab text="Danh sách sinh viên">
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
